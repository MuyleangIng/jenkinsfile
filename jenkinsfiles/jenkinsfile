pipeline {
    agent {
        label 'master',
        docker {
            image 'node:18.9.1'
            args '-u root'
        }
    };
    stages {
        stage('git clone ') {
            steps {
                 git 'https://github.com/MuyleangIng/react-project.git'
            }
        }
        // stage('test') {
        //     steps {
        //         sh '''
        //         node -v
        //         '''
        //     }
        // }
        stage('docker pipeline') {
            steps {
               script{
                    docker.image('node:18.9.1').inside{
                    sh '''
                    node -v
                    npm run build
                    '''
                    }
               }
            }
        }

    }
}