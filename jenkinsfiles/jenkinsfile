pipeline {
    agent {
        docker {
            image 'node:18.9.1'
            args '-u root'
        }
    };
    stages {
        stage('git clone ') {
            steps {
                 git 'https://github.com/MuyleangIng/react-project.git'
            }
        }
        stage('docker pipeline') {
            steps {
               script{
                    docker.image('node:18.9.1').inside{
                        sh '''
                        npm run build
                        '''
                    }  
                    docker.withRegistry('', 'dockerhub') {
                    def customImage = docker.build("muyleangin/react-project:${BUILD_NUMBER}")

                    customImage.push()
                    }
               }
            }
        }
    

    }
    post{
        always {
           cleanWs()
       }
       success{
              echo "This block only runs if the pipeline was successful."
       }
         failure{
                  echo "This block only runs if the pipeline was broken."
         }


    }

}